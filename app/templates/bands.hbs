<div class="rr-sidebar">
  <ul class="rr-list">
    {{#each this.model as |band|}}
      <li class="rr-list-item" data-test-rr="band-list-item">
        <LinkTo @route="bands.band" @model={{band.id}} class="rr-bandlink" data-test-rr="band-link">
          {{band.name}}
          <span class="rr-pointer">
            {{fa-icon "angle-right"}}
          </span>
        </LinkTo>
      </li>
    {{/each}}
  </ul>
  <div class="rr-new-label">
    {{#if this.isAddingBand}}
      <form class="rr-inline-form" {{on "submit" this.saveBand}}>
        <Input @type="text" @value={{this.newBandName}} class="rr-input" placeholder="New band"
          data-test-rr="new-band-input" />
        <div class="rr-inline-form-group ml2">
          <button type="submit" class="rr-action-button" disabled={{this.isAddButtonDisabled}}
            data-test-rr="new-band-button">
            Add
          </button>
          <button type="button" class="rr-cancel-icon" {{on "click" this.cancelAddBand}}>
            {{fa-icon "times"}}
          </button>
        </div>
      </form>
    {{else}}
      <label {{on "click" this.addBand}} data-test-rr="new-band-label">
        {{fa-icon "plus"}}
        Add new band
      </label>
    {{/if}}
  </div>
</div>
<div class="rr-main-panel">
  {{outlet}}
</div>